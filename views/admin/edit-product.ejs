<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/edit-product" method="POST">
            <% let id = product ? product.id : '' %>
            <input type="hidden" name="id" value="<%= id %>">
            <div class="form-control">
                <label for="title">Title</label>
                <% let title = product ? product.title : ''%>
                <input type="text" name="title" id="title" value="<%= title %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <% let imageUrl = product ? product.imageUrl : ''%>
                <input type="text" name="imageUrl" id="imageUrl" value="<%= imageUrl %>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <% let price = product ? product.price : ''%>
                <input type="number" name="price" id="price" step="0.01" value="<%= price %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <% let description = product ? product.title : ''%>
                <textarea name="description" id="description" rows="5"><%= product.description %></textarea>
            </div>

            <button class="btn" type="submit"><%= editMode ? 'Update Product' : 'Add Product' %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>